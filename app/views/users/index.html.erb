<div class='row'>
  <div class='col-md-8 col-md-offset-2'>
    <h1 class='text-center'>Dev Match Commmunity</h1>
    <p class='text-center'>Welcome to the Dev Match Community</p>
    <p class='text-center'> Users must save a profile to be visible to the Community</p>
    <ul class='list-unstyled'>
      <% @users.each do |user| %>
          <% if user.profile %>
            <li>
              <div class="well row <%= cycle('white-bg','green-bg','') %>">
                <div class='col-sm-4 text-center'>
                  <% if user.profile.avatar %>
                    <%= link_to user do %>
                      <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar' %>
                    <% end %>
                  <% end %>
                </div>
                <div>
                  <%= link_to user do %>
                    <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                  <% end %>
                  <%= link_to user do %>
                    <p><%= user.profile.job_title %> 
                    <% if user.plan_id == 2 %>
                      <span class="label label-danger">PRO</span>
                    <% end %>
                    </p>
                  <% end %>
                </div>
              </div>
              
            </li>
          <% end %>
      <% end %>
    </ul>
  </div>
</div> 